@model Student
@{
    ViewData["Title"] = "Öğrenci Detay Formu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Component.InvokeAsync("HeaderWithBackButton", new { pageTitle = ViewData["Title"] as string })

<div class="row">
    <div class="col-8">
        <h5 class="text-primary mb-3">Öğrenci Bilgileri</h5>
        <hr class="text-primary">

        <form asp-controller="Student" asp-action="Edit" method="post">

            <input type="hidden" asp-for="StudentId">

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Surname" class="form-label"></label>
                <input asp-for="Surname" class="form-control">
                <span asp-validation-for="Surname"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" placeholder="Uygun formatta giriniz! 11 haneli (05** *** ** **)">
                <span asp-validation-for="Phone"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Gender" class="form-label"></label>
                <select asp-for="Gender" class="form-select">
                    <option value="">Seçiniz...</option>
                    <option value="Erkek">Erkek</option>
                    <option value="Bayan">Bayan</option>
                    <option value="Belirtmek İstemiyorum">Belirtmek İstemiyorum</option>
                </select>
                <span asp-validation-for="Gender"></span>
            </div>

            <div class="d-flex justify-content-end mt-5">
                <button type="submit" class="btn btn-outline-primary px-5 ">Güncelle</button>
            </div>

        </form>
    </div>

    <div class="col-4">
        <h5 class="text-primary">Kurs Listesi</h5>
        <hr class="text-primary">
        <ul>
            @foreach (var item in Model.Registration)
            {
                <li>@item.Course.Title</li>
            }
        </ul>
    </div>

</div>