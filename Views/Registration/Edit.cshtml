@model Registration
@{
ViewData["Title"] = "Kayıt Güncelleme Sayfası";
Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Component.InvokeAsync("HeaderWithBackButton", new { pageTitle = ViewData["Title"] as string })


<form asp-action="Edit" asp-controller="Registration" method="post">

    <input type="hidden" asp-for="RegistrationId">

    <div class="mb-3">
        <label asp-for="StudentId" class="form-label"></label>
        <select asp-for="StudentId" asp-items="@ViewBag.Students" class="form-control">
            <option value="">Seçiniz</option>
        </select>
        <span asp-validation-for="StudentId"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CourseId" class="form-label"></label>
        <select asp-for="CourseId" asp-items="@ViewBag.Courses" class="form-control">
            <option value="">Seçiniz</option>
        </select>
        <span asp-validation-for="CourseId"></span>
    </div>

    <div class="justify-content-end d-flex">
        <button type="submit" class="btn btn-outline-primary">Güncelle</button>
    </div>
</form>