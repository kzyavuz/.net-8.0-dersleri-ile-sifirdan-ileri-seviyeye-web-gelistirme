@model Teacher
@{
    ViewData["Title"] = "Öğretmen Güncelleme Formu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Component.InvokeAsync("HeaderWithBackButton", new { pageTitle = ViewData["Title"] as string })

<div class="row">
    <div class="col-8">
        <h4 class="text-primary">Öğretmen bilgisi</h4>
        <hr class="text-primary">
        <form asp-controller="Teacher" asp-action="Edit" method="post">
            <input type="hidden" asp-for="TeacherId">

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Surname" class="form-label"></label>
                <input asp-for="Surname" class="form-control">
                <span asp-validation-for="Surname"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control">
                <span asp-validation-for="Phone"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StartDateTime" class="form-label"></label>
                <input asp-for="StartDateTime" type="date" class="form-control" value="@Model.StartDateTime?.ToString("yyyy-MM-dd")">
                <span asp-validation-for="StartDateTime"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Gender" class="form-label">@Html.DisplayNameFor(x => x.Gender)</label>
                <select asp-for="Gender" class="form-select">
                    <option value="">Seçiniz...</option>
                    <option value="Erkek">Erkek</option>
                    <option value="Bayan">Bayan</option>
                    <option value="Belirtmek İstemiyorum">Belirtmek İstemiyorum</option>
                </select>
                <span asp-validation-for="Gender"></span>
            </div>

            <div class="d-flex justify-content-end mt-5">
                <button type="submit" class="btn btn-outline-primary px-5 ">Güncelle</button>
            </div>

        </form>
    </div>
    <div class="col-4">
        <h4 class="text-primary">Kayıtlı Öğrencisi bilgisi</h4>
        <hr class="text-primary">
        <ol class="row">
            @foreach (var item in Model.Courses)
            {
                <li class="col-6">
                    @item.Title
                </li>
            }
        </ol>
    </div>
</div>